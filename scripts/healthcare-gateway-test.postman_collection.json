{
  "info": {
    "name": "Healthcare Gateway Integration Test",
    "description": "API Gateway → Healthcare Service (Port 8085) 연동 테스트",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "GATEWAY_URL",
      "value": "http://localhost:8000"
    },
    {
      "key": "JWT_TOKEN",
      "value": "YOUR_JWT_TOKEN_HERE"
    }
  ],
  "item": [
    {
      "name": "1. Healthcare Health Check (Public)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{GATEWAY_URL}}/api/chat/health",
          "host": ["{{GATEWAY_URL}}"],
          "path": ["api", "chat", "health"]
        }
      },
      "response": []
    },
    {
      "name": "2. Unauthorized Chat Request (401 Expected)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"message\": \"test without token\"\n}"
        },
        "url": {
          "raw": "{{GATEWAY_URL}}/api/chat/haiku",
          "host": ["{{GATEWAY_URL}}"],
          "path": ["api", "chat", "haiku"]
        }
      },
      "response": []
    },
    {
      "name": "3. Authorized Haiku Chat (with JWT)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{JWT_TOKEN}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"message\": \"강아지 건강 관리 팁 알려줘\"\n}"
        },
        "url": {
          "raw": "{{GATEWAY_URL}}/api/chat/haiku",
          "host": ["{{GATEWAY_URL}}"],
          "path": ["api", "chat", "haiku"]
        }
      },
      "response": []
    },
    {
      "name": "4. Authorized Persona Chat (with JWT)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{JWT_TOKEN}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"petId\": 1,\n  \"message\": \"오늘 기분 어때?\"\n}"
        },
        "url": {
          "raw": "{{GATEWAY_URL}}/api/chat/persona",
          "host": ["{{GATEWAY_URL}}"],
          "path": ["api", "chat", "persona"]
        }
      },
      "response": []
    }
  ]
}
